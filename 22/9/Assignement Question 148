import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class LoanCalculator extends JFrame implements ActionListener {
    JLabel lblAmount, lblDuration, lblTotal;
    JTextField txtAmount, txtDuration, txtTotal;
    JButton btnCalculate;

    public LoanCalculator() {
        setTitle("Loan Calculator");
        setSize(400, 250);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        JPanel panel = new JPanel(new GridLayout(4, 2, 10, 10));
        panel.setBackground(new Color(100, 150, 200)); // blue background

        // Labels
        lblAmount = new JLabel("Amount requested");
        lblDuration = new JLabel("Duration (year)");
        lblTotal = new JLabel("Total to return");

        // Text fields
        txtAmount = new JTextField();
        txtDuration = new JTextField();
        txtTotal = new JTextField();
        txtTotal.setEditable(false); // user cannot type here

        // Button
        btnCalculate = new JButton("Calculate");
        btnCalculate.addActionListener(this);

        // Add components
        panel.add(lblAmount);
        panel.add(txtAmount);

        panel.add(lblDuration);
        panel.add(txtDuration);

        panel.add(lblTotal);
        panel.add(txtTotal);

        panel.add(new JLabel("")); // empty placeholder
        panel.add(btnCalculate);

        add(panel);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        try {
            double amount = Double.parseDouble(txtAmount.getText());
            int years = Integer.parseInt(txtDuration.getText());

            // Simple calculation: Interest = 0.6% per year (example based on your picture)
            double interestRate = 0.006; 
            double total = amount + (amount * interestRate * years);

            txtTotal.setText(String.format("%.0f", total));
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, "Please enter valid numbers");
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            new LoanCalculator().setVisible(true);
        });
    }
}
